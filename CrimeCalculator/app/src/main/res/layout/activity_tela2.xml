<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rafael.bruno.crimecalculator.Tela2"
    android:background="#717171">


    <Button
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tela2_btn_calcular"
        android:layout_marginBottom="124dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="Suspeito 2"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/tela2_nomeS2"
        android:layout_above="@+id/tela2_btn_calcular"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="67dp"
        android:background="@drawable/borda"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/tela2_nomeS1"
        android:hint="Suspeito 1"
        android:layout_above="@+id/tela2_nomeS2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/borda"/>


</RelativeLayout>
